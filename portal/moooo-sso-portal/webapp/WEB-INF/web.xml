	<!-- 验证码 -->
	<servlet>
		<servlet-name>verifyCode</servlet-name>
		<servlet-class>com.kedacom.movision.common.servlet.VerifyCodeServlet</servlet-class>
		<init-param>
			<param-name>sessionKey</param-name>
			<param-value>verifyCode</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>verifyCode</servlet-name>
		<url-pattern>/verifyImage</url-pattern>
	</servlet-mapping>
	
	<error-page>
